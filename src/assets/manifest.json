{
  "manifest_version": 2,
  "name": "Pup Finder",
  "description": "Get notified of new dogs and cats from the local animal shelter.",
  "version": "1",
  "author": "Carl Knutson",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "https://www.animalhumanesociety.org/*", "storage"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "web_accessible_resources": [
    "assets/css/*",
    "assets/js/*",
    "assets/fonts/*"
  ]
}
